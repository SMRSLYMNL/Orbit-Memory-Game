<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sscompany.memorygame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TarzanModes" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_2_to_3" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_4_to_3" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_4_to_4" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_5_to_4" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_6_to_4" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_7_to_4" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_6_to_5" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_6_to_6" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_8_to_5" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_7_to_6" android:screenOrientation="portrait"/>
        <activity android:name=".Mode_8_to_6" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

</manifest>